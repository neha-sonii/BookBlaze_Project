<body class="login-container">
    <!-- Login section starts here -->
    <div class="login-box">
        <% if (messages.success && messages.success.length> 0) { %>
            <div class="alert alert-success">
                <%= messages.success[0] %>
            </div>
            <% } %>
                <% if (messages.error && messages.error.length> 0) { %>
                    <div class="alert alert-danger">
                        <%= messages.error[0] %>
                    </div>
                    <% } %>
                        <h1 class="headText">Login</h1>
                        <form class="submit-page" action="/logedin" method="POST">

                            <div class="input-box">
                                <input class="login-input" type="email" name="email" placeholder="Enter Your Email"
                                    required>
                                <br>
                                <input class="login-input" type="password" name="password"
                                    placeholder="Enter your password" required>
                            </div>
                            <div class="rembr-checkbox">
                                <div>
                                    <input type="checkbox">
                                    <label for="rememeber">Remember me</label>
                                </div>
                                <a href="/reset-password" class="forget-pwd">Forgot password?</a>
                            </div>
                            <button type="submit" class="button login-btn">Login</button>
                        </form>
