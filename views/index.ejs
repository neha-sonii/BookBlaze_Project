<body>
    <!-- header section starts here -->

    <header class="cover-image">

        <% if (messages.success && messages.success.length> 0) { %>
            <div class="alert alert-success">
                <%= messages.success[0] %>
            </div>
            <% } %>
                <% if (messages.error && messages.error.length> 0) { %>
                    <div class="alert alert-danger">
                        <%= messages.error[0] %>
                    </div>
                    <% } %>
                        <%- include('partials/header', { bgColor: bgColor, textColor: textColor, menuBorder: menuBorder
                            }) %>

                            <div class="hero-text">
                                <div class="content">
                                    <div class="bg-opacity">
                                        <div class="title head AnimateHero">Ignite your Reading journey</div>
                                        <div class="cover-head2 AnimateHero">Dive into stories, explore authors and
                                            light up your
                                            bookself.
                                        </div>
                                    </div>
                                </div>
                            </div>
    </header>

    <!-- header section end here -->


    <!-- best book section starts here -->

    <section class="best-book professional-best-book">
        <div class="best-book-header">
            <div>
                <div class=" switch-color best-book-title">Best Book of the Month</div>
                <div class="best-book-subtitle">Handpicked by our editors for you. Discover the most impactful read this
                    month!</div>
            </div>
            <a href="/bookstore" class="button best-book-seeall">See all books</a>
        </div>
        <div class="book-section best-book-section">
            <div class="angle previous">&#10094;</div>
            <div class="book-cover animation" id="book-track">
                <% books.forEach((book, idx)=>{ %>
                    <div class="book-card1 resize best-book-card">
                        <% if(idx===0) { %>
                            <div class="best-book-featured">â˜… Featured</div>
                            <% } %>
                                <a href="/notes/<%= book.id %>" class="best-book-img-link">
                                    <img src="https://covers.openlibrary.org/b/isbn/<%= book.isbn %>-L.jpg"
                                        alt="<%= book.title %>" class="best-book-img">
                                </a>
                                <div class="discription best-book-discription">
                                    <div class="best-book-title-text">
                                        <%= book.title %>
                                    </div>
                                    <!-- <div class="best-book-price">$<%= book.price %>
                                    </div> -->
                                    <button class="button cart-button best-book-cart-btn">
                                        <a href="/notes/<%= book.id %>">Read Notes</a>
                                    </button>
                                </div>
                    </div>
                    <% }) %>
            </div>
            <div class="angle next">&#10095;</div>
        </div>
    </section>
    <!-- best book section ends here -->


