                            </div>



        </header>

        <!-- header section end here -->

        <!-- <div class="bottom-blur"></div> -->


        <!-- best book section starts here -->

        <section class="best-book professional-best-book">
            <div class="best-book-header">
                <div>
                    <div class=" switch-color best-book-title">Best Book of the Month</div>
                    <div class="best-book-subtitle">Handpicked by our editors for you. Discover the most impactful read
                        this
                        month!</div>
                </div>
                <a href="/bookstore" class="best-book-seeall">See all books</a>
            </div>
            <div class="book-section best-book-section">
                <div class="angle previous">&#10094;</div>
                <div class="book-cover animation" id="book-track">
                    <% books.forEach((book, idx)=>{ %>
                        <div class="book-card1 resize best-book-card">
                            <% if(idx===0) { %>
                                <div class="best-book-featured">★ Featured</div>
                                <% } %>
                                    <a href="/notes/<%= book.id %>" class="best-book-img-link">
                                        <img src="https://covers.openlibrary.org/b/isbn/<%= book.isbn %>-L.jpg"
                                            alt="<%= book.title %>" class="best-book-img">
                                    </a>
                                    <div class="discription best-book-discription">
                                        <div class="best-book-title-text">
                                            <%= book.title %>
                                        </div>
                                        <!-- <div class="best-book-price">$<%= book.price %>
                                    </div> -->
                                        <button class="button cart-button best-book-cart-btn">
                                            <a href="/notes/<%= book.id %>">Read Notes</a>
                                        </button>
                                    </div>
                        </div>
                        <% }) %>
                </div>
                <div class="angle next">&#10095;</div>
            </div>
        </section>
        <!-- best book section ends here -->


        <!-- contact us section starts here -->

        <%- include('partials/form', { border: border, contact_title: contact_title }) %>


            <!-- contact us section ends here -->


