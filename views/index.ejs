<body>
    <!-- header section starts here -->

    <%- include('partials/header') %>

        <header class="cover-image">
            <div class="hero-overlay"></div>

            <% if (messages.success && messages.success.length> 0) { %>
                <div class="alert alert-success">
                    <%= messages.success[0] %>
                </div>
                <% } %>
                    <% if (messages.error && messages.error.length> 0) { %>
                        <div class="alert alert-danger">
                            <%= messages.error[0] %>
                        </div>
                        <% } %>

                            <div class="hero-container">
                                <div class="hero-text-center">

                                    <div class="featured-card-wrapper AnimateHero">
                                        <div class="featured-card">
                                            <span class="card-tag">Featured Summary</span>
                                            <img src="/images/midnight library.jpg" width="130px" height="150px"
                                                alt="Book Cover">
                                            <!-- <h3>The Midnight Library</h3> -->
                                            <div class="stars">★★★★★</div>
                                            <a href="/bookstore" class="card-btn">Read Summary</a>
                                        </div>
                                    </div>

                                    <div class="hero-text">
                                        <div class="head AnimateHero"><span class="highlight">Ignite</span> your Reading
                                            journey</div>
                                        <div class="cover-head2 AnimateHero">
                                            Stop guessing. Get precise summaries and insights to find your next great
                                            read
                                            before you buy.
                                        </div>
                                        <button class="explore-btn AnimateHero">
                                            <a href="/bookstore">Explore Now</a>
                                        </button>

                                        <div class="social-proof AnimateHero">
                                            Join <span class="star-contrast">5,000+</span> readers discovering <span
                                                class="star-contrast">★★★★★</span> books
                                        </div>
                                        <div class="benefits-bar AnimateHero">
                                            <div class="benefit-item"><i class="fa-solid fa-book-open"></i> Precise
                                                Summaries</div>
                                            <div class="benefit-item"><i class="fa-solid fa-clock-rotate-left"></i> Save
                                                Time</div>
                                            <div class="benefit-item"><i class="fa-solid fa-cart-shopping"></i> Informed
                                                Purchases</div>
                                        </div>
                                    </div>
                                </div>
                                <div class="preview-books">
